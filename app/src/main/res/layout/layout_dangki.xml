<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#9ea184"
    tools:context="com.example.unitec.quanlynhanvien.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="ĐĂNG KÍ TÀI KHOẢN"
            android:textColor="#1e1c1c"
            android:background="#4139af"
            android:padding="7dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        <EditText
            android:id="@+id/txtdangkiuser"
            android:layout_width="300dp"
            android:paddingLeft="10dp"
            android:layout_height="40dp"
            android:hint="Tên Tài Khoản Đăng Kí"
            android:background="#7dc5d7"
            android:textSize="17sp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText
            android:id="@+id/txtdangkipass"
            android:paddingLeft="10dp"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Mật Khẩu Đăng Kí"
            android:background="#7dc5d7"
            android:textSize="17sp"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <EditText
            android:layout_width="300dp"
            android:background="#7dc5d7"
            android:textSize="17sp"
            android:paddingLeft="10dp"
            android:hint="Nhập Lại mật khẩu"
            android:inputType="textPassword"
            android:id="@+id/txtdangkipass1"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="25dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect"
            android:id="@+id/btndangki"
            android:layout_weight="1"
            android:text="ĐĂNG KÝ" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="25dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:id="@+id/btnthoatdangki"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect"
            android:layout_weight="1"
            android:text="THOÁT" />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="25dp" />
    </TableRow>
</LinearLayout>
